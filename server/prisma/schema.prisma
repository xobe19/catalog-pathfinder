generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pair {
  address       String @id
  token0Address String
  token1Address String
  token0Reserve String
  token1Reserve String
  chainId       Int    @default(1)
}

model PairV3 {
  address        String @id
  liquidity      String
  sqrtPriceX96   String
  fees           Int
  tick           Int
  token0Address  String
  token0Decimals Int
  token0Symbol   String
  token0Balance  String
  token1Address  String
  token1Decimals Int
  token1Symbol   String
  token1Balance  String
  chainId        Int    @default(1)
}

model PairSushiSwap {
  address       String @id
  token0Address String
  token1Address String
  token0Reserve String
  token1Reserve String
  chainId       Int    @default(1)
}

model PairPancakeSwap {
  address       String @id
  token0Address String
  token1Address String
  token0Reserve String
  token1Reserve String
  chainId       Int    @default(1)
}

model Token {
  id       String  @id
  symbol   String?
  name     String?
  decimals Int?
  chainId  Int     @default(1)
}
